<Window x:Class="CryptoTA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoTA"
        xmlns:uc="clr-namespace:CryptoTA.UserControls"
        mc:Ignorable="d" 
        Loaded="Window_Loaded"
        Title="CryptoTA"
        Height="850"
        Width="1400"
        Icon="icon_64.png"
        Style="{DynamicResource CustomWindowStyle}" WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Menu Margin="0,0,0,5">
            <MenuItem Header="File" />
            <MenuItem Header="Edit">
                <MenuItem x:Name="AccountsMenuItem" Header="Accounts" Click="AccountsMenuItem_Click" />
            </MenuItem>
            <MenuItem Header="View" />
            <MenuItem Header="About" />
        </Menu>

        <TabControl Grid.Row="1" TabStripPlacement="Left">
            <TabItem Header="Chart" IsSelected="True">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <GroupBox Header="Cryptocurrency" Margin="10" Padding="10">
                                <ComboBox x:Name="cryptoCurrencyComboBox" SelectionChanged="cryptoCurrencyComboBox_SelectionChanged">
                                    <ComboBoxItem IsSelected="True">ETH</ComboBoxItem>
                                    <ComboBoxItem>BTC</ComboBoxItem>
                                    <ComboBoxItem>ADA</ComboBoxItem>
                                    <ComboBoxItem>XRP</ComboBoxItem>
                                    <ComboBoxItem>AVAX</ComboBoxItem>
                                    <ComboBoxItem>SHIB</ComboBoxItem>
                                    <ComboBoxItem>WBTC</ComboBoxItem>
                                    <ComboBoxItem>UNI</ComboBoxItem>
                                    <ComboBoxItem>LTC</ComboBoxItem>
                                    <ComboBoxItem>APE</ComboBoxItem>
                                    <ComboBoxItem>USDC</ComboBoxItem>
                                    <ComboBoxItem>ETH2</ComboBoxItem>
                                    <ComboBoxItem>ALGO</ComboBoxItem>
                                </ComboBox>
                            </GroupBox>

                            <GroupBox Header="Real currency" Margin="10" Padding="10">
                                <ComboBox x:Name="realCurrencyComboBox" SelectionChanged="realCurrencyComboBox_SelectionChanged">
                                    <ComboBoxItem IsSelected="True">USD</ComboBoxItem>
                                    <ComboBoxItem>PLN</ComboBoxItem>
                                    <ComboBoxItem>GBP</ComboBoxItem>
                                    <ComboBoxItem>EUR</ComboBoxItem>
                                </ComboBox>
                            </GroupBox>

                            <GroupBox Header="Chart time span" Margin="10" Padding="10">
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="timeSpan0Btn" Margin="0,0,5,0" Click="timeSpan0Btn_Click">All time</Button>
                                    <Button x:Name="timeSpan1Btn" Margin="0,0,5,0" Click="timeSpan1Btn_Click">1 year</Button>
                                    <Button x:Name="timeSpan2Btn" Margin="0,0,5,0" Click="timeSpan2Btn_Click">6 months</Button>
                                    <Button x:Name="timeSpan3Btn" Margin="0,0,5,0" Click="timeSpan3Btn_Click">3 months</Button>
                                    <Button x:Name="timeSpan4Btn" Margin="0,0,5,0" Click="timeSpan4Btn_Click">1 month</Button>
                                    <Button x:Name="timeSpan5Btn" Margin="0,0,5,0" Click="timeSpan5Btn_Click">2 weeks</Button>
                                    <Button x:Name="timeSpan6Btn" Margin="0,0,5,0" Click="timeSpan6Btn_Click">1 week</Button>
                                    <Button x:Name="timeSpan7Btn" Margin="0,0,5,0" Click="timeSpan7Btn_Click">3 days</Button>
                                    <Button x:Name="timeSpan8Btn" Click="timeSpan8Btn_Click">1 day</Button>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" Orientation="Horizontal">
                            <TextBlock x:Name="currentChangeText" Text="5%" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Bottom" />
                            <TextBlock x:Name="currentPriceText" Text="$1121,21" FontSize="36" />
                            <TextBlock x:Name="currentCurrencyText" Text="/ETH" FontSize="36" Foreground="#FF797979" />
                        </StackPanel>
                    </Grid>
                    
                    <uc:PointShapeLineChartControl Grid.Row="1" x:Name="chartControl" />

                    <Grid Margin="0,5,0,5" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Strong buy" HorizontalAlignment="Center" FontSize="16" />
                            <Label Content="Oscillators" FontSize="11" HorizontalContentAlignment="Center"  />
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Strong buy" HorizontalAlignment="Center" FontSize="21" VerticalAlignment="Center" />
                            <Label Content="Summary" FontSize="14" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" />
                        </StackPanel>

                        <StackPanel Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="Strong buy" HorizontalAlignment="Center" FontSize="16" />
                            <Label Content="Moving Averages" FontSize="11" HorizontalContentAlignment="Center"  />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Indicators">
                
            </TabItem>
            <TabItem Header="Statistics">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TabControl>
                        <TabItem Header="Kraken" IsSelected="True">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <GroupBox Header="Current Balance" Margin="20">
                                    
                                </GroupBox>
                                <GroupBox Grid.Row="1" Header="Transactions" Margin="20">

                                </GroupBox>
                                <GroupBox Grid.Row="2" Header="Income Results" Margin="20">

                                </GroupBox>
                            </Grid>
                        </TabItem>
                        <TabItem Header="Gemini">

                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
            <TabItem Header="Strategy settings">

            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding}" 
                       x:Name="statusText" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
