<Page x:Class="CryptoTA.Pages.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptoTA.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" 
      d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type=local:StatisticsPage}"
      Title="StatisticsPage"
      Loaded="Page_Loaded"
>
    <Page.Resources>
        <DataTemplate x:Key="AccountBalanceTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label Content="{Binding Name}"/>
                <Label 
                    Grid.Column="1"
                    Content="{Binding TotalAmount}"
                />
            </Grid>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox
            Header="Market API"
            Margin="20"
        >
            <ComboBox 
                x:Name="MarketsComboBox"
                Margin="10"
                ItemsSource="{Binding Markets}"
                SelectedItem="{Binding Market}"
                DisplayMemberPath="Name" 
                SelectionChanged="MarketsComboBox_SelectionChanged"
            />
        </GroupBox>

        <GroupBox
            Grid.Column="1"
            x:Name="CredentialsMissingGroupBox"
            Margin="20" BorderBrush="#FF7B0000"
        >
            <GroupBox.Header>
                <TextBlock Text="Credentials Missing" Foreground="#FFFF4040"/>
            </GroupBox.Header>
            <StackPanel Margin="10">
                <TextBlock FontSize="11">
                You have to provide credentials for this API.
                </TextBlock>
                <TextBlock FontSize="11">
                You can add them by choosing from menu Edit -> Accounts.
                </TextBlock>
            </StackPanel>
        </GroupBox>

        <GroupBox 
            Grid.Row="1"
            Header="Current Balance"
            Margin="20"

        >
            <ItemsControl 
                x:Name="AccountBalanceItemsControl"
                ItemTemplate="{StaticResource AccountBalanceTemplate}" 
            />
        </GroupBox>
        
        <GroupBox 
            Grid.Row="1" 
            Grid.Column="1"
            Header="Transactions"
            Margin="20"
        >

        </GroupBox>
        
        <GroupBox 
            Grid.Row="2" 
            Header="Income Results" 
            Margin="20"
        >

        </GroupBox>

        <GroupBox 
            Grid.Column="1"
            Grid.Row="2" 
            Header="Forecast" 
            Margin="20"
        >

        </GroupBox>
    </Grid>
</Page>
