<Page x:Class="CryptoTA.Pages.StrategySettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CryptoTA.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="680"
      d:DesignWidth="1000"
      d:DataContext="{d:DesignInstance Type=local:StrategySettingsPage}"
      Title="StrategySettingsPage" 
      Loaded="Page_Loaded"
>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <GroupBox
            Header="Market API"
            Margin="10"
        >
            <ComboBox 
                x:Name="MarketsComboBox"
                Margin="10"
                ItemsSource="{Binding Markets}"
                SelectedItem="{Binding Market}"
                DisplayMemberPath="Name" 
                SelectionChanged="MarketsComboBox_SelectionChanged"
            />
        </GroupBox>

        <GroupBox
            Grid.Column="1"
            x:Name="CredentialsMissingGroupBox"
            Margin="10" BorderBrush="#FF7B0000"
        >
            <GroupBox.Header>
                <TextBlock Text="Credentials Missing" Foreground="#FFFF4040"/>
            </GroupBox.Header>
            <StackPanel Margin="10">
                <TextBlock FontSize="11">
                You have to provide credentials for this API.
                </TextBlock>
                <TextBlock FontSize="11">
                You can add them by choosing from menu Edit -> Accounts.
                </TextBlock>
            </StackPanel>
        </GroupBox>

        <GroupBox 
            x:Name="StrategyGroupBox"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Header="Strategy Settings"
            Margin="10"
        >
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>
                <Label 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right"
                >
                    Sell if gain is at least
                </Label>
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBox 
                        Margin="10, 25"
                        Padding="5"
                        Text="{Binding Strategy.MinimalGain, Mode=TwoWay}"
                    />
                    <ComboBox
                        Margin="10, 25"
                        Grid.Column="1"
                        Padding="5"
                    />
                </Grid>

                <Label 
                    Grid.Row="1"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right"
                >
                    Sell if loss is at least
                </Label>
                <Grid 
                    Grid.Row="1"
                    Grid.Column="1"
                >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBox 
                        Margin="10, 25"
                        Padding="5"
                        Text="{Binding Strategy.MaximalLoss, Mode=TwoWay}"
                    />
                    <ComboBox
                        Margin="10, 25"
                        Padding="5"
                        Grid.Column="1"
                    />
                </Grid>

                <Label 
                    Grid.Row="2"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right"
                >
                    Buy indicator strategy
                </Label>
                <ComboBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="10, 25"
                    Padding="5"
                    ItemsSource="{Binding StrategyCategories}"
                    SelectedItem="{Binding StrategyCategory}"
                    DisplayMemberPath="Name"
                />

                <Label 
                    Grid.Column="2"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right"
                >
                    Target
                </Label>
                <ComboBox
                    x:Name="TradingPairComboBox"
                    Grid.Column="3"
                    Margin="10, 25"
                    Padding="5"
                    ItemsSource="{Binding TradingPairs}"
                    SelectedItem="{Binding TradingPair}"
                    DisplayMemberPath="DisplayName" 
                    SelectionChanged="TradingPairComboBox_SelectionChanged"
                />

                <Label 
                    Grid.Row="1"
                    Grid.Column="2"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right"
                >
                    Buy amount
                </Label>
                <Grid 
                    Grid.Row="1"
                    Grid.Column="3"
                >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <TextBox 
                        Margin="10, 25"
                        Padding="5"
                        Text="{Binding Strategy.BuyAmount, Mode=TwoWay}"
                    />
                    <ComboBox
                        Margin="10, 25"
                        Padding="5"
                        Grid.Column="1"
                    />
                </Grid>

                <Label 
                    Grid.Row="2"
                    Grid.Column="2"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Right"
                >
                    Ask before trade
                </Label>
                <CheckBox 
                    Grid.Row="2"
                    Grid.Column="3"
                    Padding="5"
                    Margin="10, 0, 0, 0"
                    IsChecked="{Binding Strategy.AskBeforeTrade, Mode=TwoWay}"
                />
            </Grid>
        </GroupBox>

        <GroupBox 
            x:Name="StrategyStatusGroupBox"
            Grid.Row="2" 
            Grid.ColumnSpan="2"
            Header="Status" 
            Margin="10"
        >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <TextBlock 
                    x:Name="StrategyStatusTextBlock"
                    Margin="10"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    FontSize="15"
                />

                <Button 
                    x:Name="StrategySwitchButton"
                    Grid.Column="1"
                    Margin="10"
                    Padding="10"
                    IsEnabled="False"
                    Content="Activate"
                    Click="StrategySwitchButton_Click"
                />
            </Grid>
        </GroupBox>
        
        <GroupBox 
            x:Name="StrategiesStatusGroupBox"
            Grid.Row="3" 
            Grid.ColumnSpan="2"
            Header="Strategies status" 
            Margin="10"
        >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock 
                    Margin="10"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    FontSize="15"
                    Text="Active strategies"
                />

                <TextBlock 
                    x:Name="ActiveStrategiesCountTextBlock"
                    Grid.Column="1"
                    Margin="10"
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    FontSize="15"
                />

                <Button 
                    x:Name="StrategiesSwitchButton"
                    Grid.Column="2"
                    Margin="10"
                    Padding="10"
                    Content="Deactivate All"
                    IsEnabled="False" Click="StrategiesSwitchButton_Click"
                />
            </Grid>
        </GroupBox>
    </Grid>
</Page>
