<UserControl 
    x:Class="CryptoTA.UserControls.FeedbackMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:CryptoTA.UserControls"
    mc:Ignorable="d" 
    d:DataContext="{d:DesignInstance Type=local:FeedbackMessage}"
    d:DesignHeight="150"
    d:DesignWidth="800"
>
    <GroupBox
        Grid.Column="1"
        x:Name="MessageGroupBox"
        Margin="20" 
        BorderBrush="#FF7B0000"
    >
        <GroupBox.Header>
            <TextBlock 
                x:Name="MessageHeader" 
                Text="{Binding Header}" 
                Foreground="#FFFF4040"
            />
        </GroupBox.Header>
        <StackPanel Margin="10">
            <TextBlock 
                x:Name="MessageText" 
                Text="{Binding Text}" 
                FontSize="11" 
            />
        </StackPanel>
    </GroupBox>
</UserControl>
